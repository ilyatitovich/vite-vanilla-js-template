{
  "name": "vite-vanilla-js-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "FORCE_COLOR=1 pnpm run /^test:/",
    "test:coverage": "c8 bnt",
    "test:js": "eslint .",
    "clean:coverage": "rm -rf coverage",
    "format:prettier": "prettier -w **/*.{js,ts,html,md,cjs,json} *.{js,json,md}",
    "format:stylelint": "stylelint --fix '**/*.{css,scss}'",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@stylistic/stylelint-config": "^2.0.0",
    "@types/node": "^22.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "autoprefixer": "^10.4.20",
    "better-node-test": "^0.5.1",
    "c8": "^10.1.2",
    "eslint": "^9.8.0",
    "eslint-plugin-perfectionist": "^3.1.2",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.1",
    "stylelint-use-logical": "^2.1.2",
    "tsx": "^4.16.5",
    "typescript": "^5.2.2",
    "vite": "^5.3.4"
  }
}
